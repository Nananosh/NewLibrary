@{
      ViewData["Title"] = "Все книги";
}
@{
}
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>@ViewBag.AllTovars.Count+ Книг на сайте</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ bradcam_area  -->
<!-- job_listing_area_start  -->
<div class="job_listing_area plus_padding">
    <div class="container">
        
            <div class="col-lg-9">
                

                <div class="job_lists m-0">
                    <div class="row">
                        @foreach (var item in ViewBag.AllTovars)
                        {
                        <div class="col-lg-12 col-md-12">
                            <div class="single_jobs white-bg d-flex justify-content-between">
                                <div class="jobs_left d-flex align-items-center">
                                    <div class="thumb"style="display: table;">
                                        <img  href="/Catalog/More/@item.Id" height="80" width="auto" src=@item.BookImage alt="">
                                    </div>
                                    <div class="jobs_conetent">
                                        <a href="/Catalog/More/@item.Id"><h4>@item.BookName</h4></a>
                                        <div class="links_locat d-flex align-items-center">
                                            <div class="location">
                                                <p> <i class="fa fa-map-marker"></i>@item.PlacePublication</p>
                                            </div>
                                            <div class="location">
                                                <p> <i class="fa fa-clock-o"></i>@item.YearPubl</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="jobs_right">
                                    <div class="apply_now">
                                        <a href="/Catalog/More/@item.Id" class="boxed-btn3">Подробнее</a>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        }

                    
                </div>
            </div>
        </div>
    </div>
</div>