@{
    var returnUrl = ViewData["ReturnUrl"] as string;
}
<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>Вход</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="contact-section section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <h2 class="contact-title">Вход</h2>
            </div>
            <div class="col-lg-8">
                <form class="form-contact" action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post" id="contactForm" novalidate="novalidate">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="nickname"  type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Введите ваш логин'" placeholder='Логин'>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="password" class="form-control" name="password"  placeholder="Пароль" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Введите ваш пароль'">
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" value="login"  class="button button-contactForm btn_4 boxed-btn">Войти</button>
                    </div>
                    <a asp-area="" asp-controller="Account" asp-action="Register"><h4>Нет аккаунта? Зарегистрироваться.</h4></a>
                </form>
            </div>
            <div class="col-lg-4 col-lg-4">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Беларусь, Минск</h3>
                        <p>Колесникова, д.3</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3> +375 (25) 564 45 32 </h3>
                        <p>Понедельник-Пятница (07:00-22:00)</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@newlibrary.by</h3>
                        <p>Отправляйте письмо в любое время!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>